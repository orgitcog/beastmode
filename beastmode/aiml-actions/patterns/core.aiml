<category>
  <pattern>YES</pattern>
  <template>
    <condition name="pending_action">
      <li value="">I don't have a pending action. What would you like to do?</li>
      <li>Confirmed! Executing...</li>
    </condition>
  </template>
</category>

<category>
  <pattern>NO</pattern>
  <template>
    <think><set name="pending_action"></set></think>
    Action cancelled.
  </template>
</category>

<category>
  <pattern>CANCEL</pattern>
  <template>
    <think><set name="pending_action"></set></think>
    Operation cancelled.
  </template>
</category>

<category>
  <pattern>CONFIRM</pattern>
  <template><srai>YES</srai></template>
</category>

<category>
  <pattern>ABORT</pattern>
  <template><srai>NO</srai></template>
</category>

