<category>
  <pattern>SET * TO *</pattern>
  <template>
    <think><set name="<star index="1"/>"><star index="2"/></set></think>
    Set <star index="1"/> = <star index="2"/>
  </template>
</category>

<category>
  <pattern>WHAT IS *</pattern>
  <template>
    <get name="<star/>"/>
    <condition name="<star/>">
      <li value="">I don't have a value for "<star/>" yet.</li>
      <li><star/> = <get name="<star/>"/></li>
    </condition>
  </template>
</category>

<category>
  <pattern>USE ORG *</pattern>
  <template>
    <think><set name="default_org"><star/></set></think>
    Default organization set to: <star/>
    
    Future commands will use this org unless specified otherwise.
  </template>
</category>

<category>
  <pattern>USE TENANT *</pattern>
  <template>
